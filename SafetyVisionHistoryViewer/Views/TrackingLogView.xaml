<UserControl x:Class="SafetyVisionHistoryViewer.Views.TrackingLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:grid="clr-namespace:Syncfusion.UI.Xaml.Grid;assembly=Syncfusion.SfGrid.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Loaded="OnLoaded">
    
    <Grid Background="#1A1A1A" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 헤더 -->
        <Border Grid.Row="0" Background="#2D2D30" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <Grid>
                <StackPanel>
                    <TextBlock Text="트래킹 로그" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="사람 추적 기록을 조회하고 분석합니다." 
                             Foreground="Gray" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <syncfusion:ButtonAdv Label="새로고침" 
                                          Command="{Binding LoadTrackingRecordsCommand}"
                                          Margin="0,0,10,0"/>
                    <syncfusion:ButtonAdv Label="Excel 내보내기" 
                                        Command="{Binding ExportToExcelCommand}"
                                        IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBoolConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 필터 패널 -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- 시작 날짜 -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="시작 날짜" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding StartDate}" Width="140"/>
                </StackPanel>
                
                <!-- 종료 날짜 -->
                <StackPanel Grid.Column="1" Margin="0,0,20,0">
                    <TextBlock Text="종료 날짜" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding EndDate}" Width="140"/>
                </StackPanel>
                
                <!-- 카메라 선택 -->
                <StackPanel Grid.Column="2" Margin="0,0,20,0">
                    <TextBlock Text="카메라" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Cameras}" 
                              SelectedItem="{Binding SelectedCamera}" 
                              Width="120"/>
                </StackPanel>
                
                <!-- 활성 상태 -->
                <StackPanel Grid.Column="3" Margin="0,0,20,0">
                    <TextBlock Text="상태" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding StatusFilters}" 
                              SelectedItem="{Binding SelectedStatus}" 
                              Width="100"/>
                </StackPanel>
                
                <!-- 조회 버튼 -->
                <StackPanel Grid.Column="5" VerticalAlignment="Bottom">
                    <syncfusion:ButtonAdv IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                          Command="{Binding LoadTrackingRecordsCommand}"
                                          Label="{Binding LoadButtonText}"
                                          Width="100" Height="30"
                                          Background="#007ACC" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 트래킹 기록 리스트 -->
        <Border Grid.Row="2" Background="#2D2D30" CornerRadius="5" Padding="10">
            <syncfusion:SfDataGrid x:Name="TrackingRecordsGrid"
                                   ItemsSource="{Binding TrackingRecords}"
                                   AutoGenerateColumns="False"
                                   AllowEditing="False"
                                   AllowFiltering="True"
                                   AllowSorting="True"
                                   AllowGrouping="False"
                                   SelectionMode="Single"
                                   GridValidationMode="InView"
                                   ColumnSizer="AutoWithLastColumnFill">
            
            <syncfusion:SfDataGrid.RowStyle>
                <Style TargetType="grid:VirtualizingCellsControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsVisible}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </syncfusion:SfDataGrid.RowStyle>
            
            <syncfusion:SfDataGrid.Columns>
                <!-- ID -->
                <syncfusion:GridTextColumn HeaderText="ID" 
                                           MappingName="Id" 
                                           Width="60"
                                           TextAlignment="Center"/>
                
                <!-- 추적 ID -->
                <syncfusion:GridTextColumn HeaderText="추적 ID" 
                                           MappingName="TrackingId" 
                                           Width="80"
                                           TextAlignment="Center"/>
                
                <!-- 글로벌 추적 ID -->
                <syncfusion:GridTextColumn HeaderText="글로벌 ID" 
                                           MappingName="GlobalTrackingId" 
                                           Width="90"
                                           TextAlignment="Center"/>
                
                <!-- 카메라 -->
                <syncfusion:GridTextColumn HeaderText="카메라" 
                                           MappingName="CameraId" 
                                           Width="80"
                                           TextAlignment="Center"/>
                
                <!-- 최초 검출 시간 -->
                <syncfusion:GridTextColumn HeaderText="최초 검출 시간" 
                                           MappingName="FirstDetectedTimeDisplay" 
                                           Width="150"
                                           TextAlignment="Center"/>
                
                <!-- 마지막 목격 시간 -->
                <syncfusion:GridTextColumn HeaderText="마지막 목격 시간" 
                                           MappingName="LastSeenTimeDisplay" 
                                           Width="150"
                                           TextAlignment="Center"/>
                
                <!-- 추적 지속 시간 -->
                <syncfusion:GridTextColumn HeaderText="지속 시간(초)" 
                                           MappingName="TrackingDurationDisplay" 
                                           Width="100"
                                           TextAlignment="Right"/>
                
                <!-- 신뢰도 -->
                <syncfusion:GridTextColumn HeaderText="신뢰도" 
                                           MappingName="ConfidenceDisplay" 
                                           Width="80"
                                           TextAlignment="Right"/>
                
                <!-- 위치 -->
                <syncfusion:GridTextColumn HeaderText="위치" 
                                           MappingName="Location" 
                                           Width="120"/>
                
                <!-- 활성 상태 -->
                <syncfusion:GridTextColumn HeaderText="상태" 
                                           MappingName="StatusDisplay" 
                                           Width="60"
                                           TextAlignment="Center"/>
                
                <!-- 액션 버튼들 -->
                <syncfusion:GridTemplateColumn HeaderText="작업" Width="200">
                    <syncfusion:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="상세" 
                                        Command="{Binding DataContext.ViewTrackingDetailCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Margin="2" Padding="8,2" FontSize="10"/>
                                <Button Content="경로" 
                                        Command="{Binding DataContext.ViewTrackingPathCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Margin="2" Padding="8,2" FontSize="10"/>
                                <Button Content="삭제" 
                                        Command="{Binding DataContext.DeleteTrackingRecordCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Margin="2" Padding="8,2" FontSize="10"
                                        Background="#DC3545" Foreground="White"/>
                            </StackPanel>
                        </DataTemplate>
                    </syncfusion:GridTemplateColumn.CellTemplate>
                </syncfusion:GridTemplateColumn>
                
            </syncfusion:SfDataGrid.Columns>
            
        </syncfusion:SfDataGrid>
        </Border>
        
        <!-- 하단 상태바 -->
        <Border Grid.Row="3" Background="#3C3C3C" CornerRadius="5" Padding="10" Margin="0,10,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="총 기록:" Foreground="White" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TotalRecordCount}" Foreground="White" FontWeight="Bold" Margin="0,0,20,0"/>
                    <TextBlock Text="필터링된 기록:" Foreground="White" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding FilteredRecordCount}" Foreground="White" FontWeight="Bold" Margin="0,0,20,0"/>
                    <TextBlock Text="활성 추적:" Foreground="White" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding ActiveTrackingCount}" Foreground="LimeGreen" FontWeight="Bold"/>
                </StackPanel>
                
                <TextBlock Text="{Binding StatusMessage}" 
                           HorizontalAlignment="Right" 
                           Foreground="Gray"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>