<UserControl x:Class="SafetyVisionHistoryViewer.Views.EventLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Loaded="OnLoaded">
    
    <Grid Background="#1A1A1A" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 헤더 -->
        <Border Grid.Row="0" Background="#2D2D30" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <Grid>
                <StackPanel>
                    <TextBlock Text="이벤트/로그" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="감지된 안전 이벤트를 조회하고 관리합니다." 
                             Foreground="Gray" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <syncfusion:ButtonAdv Label="테스트 이벤트 추가" 
                                          Command="{Binding AddTestEventCommand}"
                                          Background="Orange"
                                          Foreground="White"
                                          Margin="0,0,10,0"/>
                    <syncfusion:ButtonAdv Label="새로고침" 
                                          Command="{Binding LoadEventsCommand}"
                                          Margin="0,0,10,0"/>
                    <syncfusion:ButtonAdv Label="Excel 내보내기" 
                                        Command="{Binding ExportToExcelCommand}"
                                        IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBoolConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 필터 패널 -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 날짜 필터 -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="시작일" Foreground="Gray" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding StartDate}" Width="120"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Margin="0,0,20,0">
                    <TextBlock Text="종료일" Foreground="Gray" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding EndDate}" Width="120"/>
                </StackPanel>
                
                <!-- 이벤트 타입 필터 -->
                <StackPanel Grid.Column="2" Margin="0,0,20,0">
                    <TextBlock Text="이벤트 타입" Foreground="Gray" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding EventTypes}"
                            SelectedItem="{Binding SelectedEventType}"
                            Width="120"/>
                </StackPanel>
                
                <!-- 카메라 필터 -->
                <StackPanel Grid.Column="3" Margin="0,0,20,0">
                    <TextBlock Text="카메라" Foreground="Gray" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Cameras}"
                            SelectedItem="{Binding SelectedCamera}"
                            Width="100"/>
                </StackPanel>
                
                <!-- 조회 버튼 -->
                <StackPanel Grid.Column="4" Margin="0,0,20,0" VerticalAlignment="Bottom">
                    <syncfusion:ButtonAdv IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                                          Command="{Binding LoadEventsCommand}"
                                          Label="조 회"
                                          Width="80"
                                          Height="28"
                                          Background="DodgerBlue"
                                          Foreground="White"
                                          BorderBrush="SteelBlue"
                                          CornerRadius="3">
                        <TextBlock Text="{Binding LoadButtonText}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </syncfusion:ButtonAdv>
                </StackPanel>
                
                <!-- 통계 정보 -->
                <StackPanel Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Foreground="White">
                        <Run Text="전체: "/><Run Text="{Binding TotalEventCount}" FontWeight="Bold"/>
                        <Run Text=" | 필터: "/><Run Text="{Binding FilteredEventCount}" FontWeight="Bold" Foreground="Yellow"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 이벤트 리스트 -->
        <syncfusion:SfDataGrid Grid.Row="2" 
                             ItemsSource="{Binding Events}"
                             AutoGenerateColumns="False"
                             SelectionMode="Single"
                             RowHeight="35"
                             HeaderRowHeight="35"
                             Background="#2D2D30"
                             Foreground="White"
                             BorderThickness="0"
                             GridLinesVisibility="Horizontal"
                             AllowFiltering="False"
                             AllowSorting="True"
                             AllowGrouping="False">
            
            <syncfusion:SfDataGrid.RowStyle>
                <Style TargetType="syncfusion:VirtualizingCellsControl">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsVisible}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </syncfusion:SfDataGrid.RowStyle>
            
            <syncfusion:SfDataGrid.Columns>
                <!-- ID -->
                <syncfusion:GridTextColumn HeaderText="ID" 
                                         MappingName="Id" 
                                         Width="60"/>
                
                <!-- 시간 -->
                <syncfusion:GridTextColumn HeaderText="발생 시간" 
                                         MappingName="Timestamp" 
                                         Width="150"
                                         DisplayBinding="{Binding Timestamp, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"/>
                
                <!-- 시간 경과 -->
                <syncfusion:GridTextColumn HeaderText="경과" 
                                         MappingName="TimeAgo" 
                                         Width="80"/>
                
                <!-- 이벤트 타입 -->
                <syncfusion:GridTemplateColumn HeaderText="이벤트 타입" Width="150">
                    <syncfusion:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding EventTypeDisplay}" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding EventType}" Value="NoHelmet">
                                                <Setter Property="Foreground" Value="Orange"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding EventType}" Value="DangerZone">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding EventType}" Value="WarningZone">
                                                <Setter Property="Foreground" Value="Yellow"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </syncfusion:GridTemplateColumn.CellTemplate>
                </syncfusion:GridTemplateColumn>
                
                <!-- 카메라 -->
                <syncfusion:GridTextColumn HeaderText="카메라" 
                                         MappingName="CameraId" 
                                         Width="80"/>
                
                <!-- 추적 ID -->
                <syncfusion:GridTextColumn HeaderText="추적 ID" 
                                         MappingName="PersonTrackingId" 
                                         Width="80"/>
                
                <!-- 신뢰도 -->
                <syncfusion:GridTextColumn HeaderText="신뢰도" 
                                         MappingName="Confidence" 
                                         Width="80"
                                         DisplayBinding="{Binding Confidence, StringFormat={}{0:P0}}"/>
                
                <!-- 설명 -->
                <syncfusion:GridTextColumn HeaderText="설명" 
                                         MappingName="Description" 
                                         Width="350"/>
                
                <!-- 미디어 -->
                <syncfusion:GridTemplateColumn HeaderText="미디어" Width="150">
                    <syncfusion:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <!-- 이미지 버튼 -->
                                <Button Content="📷" 
                                        FontSize="16"
                                        Width="25" Height="25"
                                        Margin="2,0"
                                        Background="LightBlue"
                                        BorderThickness="1"
                                        BorderBrush="Blue"
                                        Foreground="White"
                                        ToolTip="{Binding ImagePath}"
                                        Command="{Binding DataContext.OpenImageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding HasImage, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Cursor="Hand"/>
                                
                                <!-- 동영상 버튼 -->
                                <Button Content="🎥" 
                                        FontSize="16"
                                        Width="25" Height="25"
                                        Margin="2,0"
                                        Background="LightCoral"
                                        BorderThickness="1"
                                        BorderBrush="Red"
                                        Foreground="White"
                                        ToolTip="{Binding VideoClipPath}"
                                        Command="{Binding DataContext.OpenVideoCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Visibility="{Binding HasVideo, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Cursor="Hand"/>
                                
                                <!-- 폴더 열기 버튼 -->
                                <Button Content="📁" 
                                        FontSize="16"
                                        Width="25" Height="25"
                                        Margin="2,0"
                                        Background="Gold"
                                        BorderThickness="1"
                                        BorderBrush="Orange"
                                        Foreground="Black"
                                        ToolTip="폴더 열기"
                                        Command="{Binding DataContext.OpenFolderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Cursor="Hand"/>
                                
                                <!-- 디버깅용 임시 정보 표시 -->
                                <!-- <TextBlock Text="{Binding HasImage}"  -->
                                <!--           Foreground="Green"  -->
                                <!--           FontSize="10"  -->
                                <!--           Margin="2,0"  -->
                                <!--           VerticalAlignment="Center"/> -->
                                <!-- <TextBlock Text="{Binding HasVideo}"  -->
                                <!--           Foreground="Red"  -->
                                <!--           FontSize="10"  -->
                                <!--           Margin="2,0"  -->
                                <!--           VerticalAlignment="Center"/> -->
                            </StackPanel>
                        </DataTemplate>
                    </syncfusion:GridTemplateColumn.CellTemplate>
                </syncfusion:GridTemplateColumn>
                
                <!-- 작업 -->
                <syncfusion:GridTemplateColumn HeaderText="작업" Width="120">
                    <syncfusion:GridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="상세" 
                                      Command="{Binding DataContext.ViewEventDetailCommand,
                                               RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      CommandParameter="{Binding}"
                                      Margin="2" Padding="5,2"/>
                                <Button Content="삭제" 
                                      Command="{Binding DataContext.DeleteEventCommand,
                                               RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      CommandParameter="{Binding}"
                                      Background="#E74C3C"
                                      Margin="2" Padding="5,2"/>
                            </StackPanel>
                        </DataTemplate>
                    </syncfusion:GridTemplateColumn.CellTemplate>
                </syncfusion:GridTemplateColumn>
            </syncfusion:SfDataGrid.Columns>
        </syncfusion:SfDataGrid>
        
        <!-- 하단 상태바 -->
        <Border Grid.Row="3" Background="#2D2D30" CornerRadius="5" Padding="10" Margin="0,10,0,0">
            <TextBlock Text="{Binding StatusMessage}" Foreground="White"/>
        </Border>
    </Grid>
</UserControl>