<Window x:Class="SafetyVisionMonitor.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Safety Vision Monitor" 
        Height="300" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#1A1A1A">
    
    <Border BorderBrush="#007ACC" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <!-- 로고/제목 영역 -->
            <StackPanel Grid.Row="0" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center">
                <TextBlock Text="Safety Vision Monitor" 
                         FontSize="32" 
                         FontWeight="Bold" 
                         Foreground="White"/>
                <TextBlock Text="제조 현장 안전 모니터링 시스템" 
                         FontSize="14" 
                         Foreground="Gray"
                         HorizontalAlignment="Center"
                         Margin="0,10,0,0"/>
            </StackPanel>
            
            <!-- 진행 상태 -->
            <StackPanel Grid.Row="1" Margin="50,20">
                <TextBlock x:Name="StatusText" 
                         Text="초기화 중..." 
                         Foreground="White"
                         Margin="0,0,0,10"/>
                <ProgressBar x:Name="LoadingProgress" 
                           Height="5" 
                           IsIndeterminate="True"
                           Foreground="#007ACC"
                           Background="#333"/>
            </StackPanel>
            
            <!-- 버전 정보 -->
            <TextBlock Grid.Row="2" 
                     Text="Version 1.0.0" 
                     Foreground="Gray"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"/>
        </Grid>
    </Border>
</Window>