<UserControl x:Class="SafetyVisionMonitor.Views.SafetySettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1200">
    
    <ScrollViewer Background="#1A1A1A" Padding="20" VerticalScrollBarVisibility="Auto">
        <StackPanel>
            
            <!-- 헤더 -->
            <Border Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <StackPanel>
                        <TextBlock Text="안전 기능 설정" FontSize="28" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="각 안전 모니터링 기능을 선택적으로 활성화하거나 비활성화할 수 있습니다." 
                                 Foreground="Gray" FontSize="14" Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <syncfusion:ButtonAdv Label="기본값으로 초기화" 
                                              Command="{Binding ResetToDefaultsCommand}"
                                              Background="#E74C3C" 
                                              Foreground="White"
                                              Margin="0,0,10,0"/>
                        <syncfusion:ButtonAdv Label="설정 가져오기" 
                                              Command="{Binding ImportSettingsCommand}"
                                              Background="#3498DB" 
                                              Foreground="White"
                                              Margin="0,0,10,0"/>
                        <syncfusion:ButtonAdv Label="설정 내보내기" 
                                              Command="{Binding ExportSettingsCommand}"
                                              Background="#27AE60" 
                                              Foreground="White"
                                              Margin="0,0,10,0"/>
                        <syncfusion:ButtonAdv Label="저장" 
                                              Command="{Binding SaveSettingsCommand}"
                                              Background="#F39C12" 
                                              Foreground="White"
                                              IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- 설정 그룹들을 2열로 배치 -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- 왼쪽 열 -->
                <StackPanel Grid.Column="0">
                    
                    <!-- 1. 안전보호구 감시 기능 -->
                    <Border Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="🛡️ 안전보호구 감시 기능" FontSize="18" FontWeight="Bold" Foreground="#E67E22" Margin="0,0,0,15"/>
                            
                            <CheckBox Content="안전모 감시 기능" 
                                    IsChecked="{Binding Settings.IsHelmetMonitoringEnabled}"
                                    Foreground="White" FontSize="14" Margin="0,0,0,10"/>
                            
                            <CheckBox Content="안전장갑 감시 기능" 
                                    IsChecked="{Binding Settings.IsGlovesMonitoringEnabled}"
                                    Foreground="White" FontSize="14" Margin="0,0,0,10"/>
                            
                            <CheckBox Content="안전화 감시 기능 (화면에서 감지위치 박스 처리)" 
                                    IsChecked="{Binding Settings.IsSafetyBootsMonitoringEnabled}"
                                    Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 2. 개인정보 보호 기능 -->
                    <Border Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="🔒 개인정보 보호 기능" FontSize="18" FontWeight="Bold" Foreground="#9B59B6" Margin="0,0,0,15"/>
                            
                        <CheckBox Content="얼굴 흐림 처리 기능" 
                                    IsChecked="{Binding Settings.IsFaceBlurEnabled}"
                                    Foreground="White" FontSize="14" Margin="0,0,0,10"/>
                            
                            <CheckBox Content="사람 몸 전체 흐림 처리 기능" 
                                    IsChecked="{Binding Settings.IsFullBodyBlurEnabled}"
                                    Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 3. 위험, 경고 감시 구역 설정 기능 -->
                    <Border Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="⚠️ 위험, 경고 감시 구역 설정 기능" FontSize="18" FontWeight="Bold" Foreground="#E74C3C" Margin="0,0,0,15"/>
                            
                            <CheckBox Content="위험 구역 설정 기능" 
                                    IsChecked="{Binding Settings.IsDangerZoneMonitoringEnabled}"
                                    Foreground="White" FontSize="14" Margin="0,0,0,10"/>
                            
                            <CheckBox Content="경고 구역 설정 기능" 
                                    IsChecked="{Binding Settings.IsWarningZoneMonitoringEnabled}"
                                    Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 4. 작업자 불안전 행동 감시 -->
                    <Border Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="👥 작업자 불안전 행동 감시" FontSize="18" FontWeight="Bold" Foreground="#F39C12" Margin="0,0,0,15"/>
                            
                            <CheckBox Content="2인 1조 작업 미준수 감시 기능" 
                                    IsChecked="{Binding Settings.IsTwoPersonWorkMonitoringEnabled}"
                                    Foreground="White" FontSize="14" Margin="0,0,0,10"/>
                            
                            <CheckBox Content="낙하 사고 감시 기능" 
                                    IsChecked="{Binding Settings.IsFallDetectionEnabled}"
                                    Foreground="White" FontSize="14" Margin="0,0,0,10"/>
                            
                            <CheckBox Content="구조 신호 감시 기능" 
                                    IsChecked="{Binding Settings.IsEmergencySignalDetectionEnabled}"
                                    Foreground="White" FontSize="14"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
                
                <!-- 오른쪽 열 -->
                <StackPanel Grid.Column="2">
                    
                    <!-- 5. 안전 모니터링 구역 설정 기능 -->
                    <Border Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="🎯 안전 모니터링 구역 설정 기능" FontSize="18" FontWeight="Bold" Foreground="#27AE60" Margin="0,0,0,15"/>
                            
                            <CheckBox Content="안전 모니터링 구역 설정 기능 사용" 
                                    IsChecked="{Binding Settings.IsSafetyMonitoringZoneEnabled}"
                                    Foreground="White" FontSize="14" Margin="0,0,0,10"/>
                            
                            <TextBlock Text="설명: 해당 구역 설정한 구역만 모니터링하며, 그 외 구역은 사람 및 객체를 감지, 구역을 SKIP 함." 
                                     Foreground="Gray" FontSize="12" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- 6. 안전 모니터링 구역 작업자 관리 기능 -->
                    <Border Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="👨‍👩‍👧‍👦 작업자 밀집 관리 기능" FontSize="18" FontWeight="Bold" Foreground="#3498DB" Margin="0,0,0,15"/>
                            
                            <CheckBox Content="작업자 밀집 인원 기능 사용" 
                                    IsChecked="{Binding Settings.IsWorkerDensityMonitoringEnabled}"
                                    Foreground="White" FontSize="14" Margin="0,0,0,10"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <TextBlock Text="밀집 인원 설정:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Text="{Binding Settings.MaxWorkerDensityCount}" 
                                         Width="60" 
                                         IsEnabled="{Binding Settings.IsWorkerDensityMonitoringEnabled}"
                                         TextAlignment="Center"
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="명" Foreground="White" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 7. 외부 연동 기능 -->
                    <Border Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="🔗 외부 연동 기능" FontSize="18" FontWeight="Bold" Foreground="#16A085" Margin="0,0,0,15"/>
                            
                            <!-- 외부 소리 알림 -->
                            <CheckBox Content="외부 소리 알림 기능" 
                                    IsChecked="{Binding Settings.IsExternalSoundAlertEnabled}"
                                    Foreground="White" FontSize="14" Margin="0,0,0,10"/>
                            
                            <Grid Margin="20,0,0,15" IsEnabled="{Binding Settings.IsExternalSoundAlertEnabled}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- 사운드 파일 선택 -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="사운드 파일:" Foreground="Gray" VerticalAlignment="Center" Width="80"/>
                                    <TextBox Text="{Binding Settings.ExternalSoundFilePath}" 
                                           Width="200" Margin="0,0,10,0" IsReadOnly="True"/>
                                    <Button Content="선택" Command="{Binding SelectSoundFileCommand}" Margin="0,0,5,0"/>
                                    <Button Content="테스트" Command="{Binding TestSoundFileCommand}"/>
                                </StackPanel>
                                
                                <!-- 음량 설정 -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal">
                                    <TextBlock Text="음량:" Foreground="Gray" VerticalAlignment="Center" Width="80"/>
                                    <Slider Value="{Binding Settings.AlertVolume}" 
                                          Minimum="0" Maximum="100" 
                                          Width="150" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding Settings.AlertVolume}" 
                                             Foreground="White" VerticalAlignment="Center" 
                                             Width="30" TextAlignment="Right" Margin="10,0,0,0"/>
                                    <TextBlock Text="%" Foreground="Gray" VerticalAlignment="Center" Margin="2,0,0,0"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- 미래 구현 기능들 (비활성화 상태) -->
                            <TextBlock Text="📋 미래 구현 예정 기능:" Foreground="#7F8C8D" FontWeight="Bold" Margin="0,10,0,10"/>
                            
                            <CheckBox Content="MQTT 알림 및 데이터 연동 기능" 
                                    IsChecked="{Binding Settings.IsMqttIntegrationEnabled}"
                                    Foreground="#7F8C8D" FontSize="14" Margin="0,0,0,8" IsEnabled="False"/>
                            
                            <CheckBox Content="미쯔비시 PLC 연동 (Bit, Word)" 
                                    IsChecked="{Binding Settings.IsMitsubishiPlcIntegrationEnabled}"
                                    Foreground="#7F8C8D" FontSize="14" Margin="0,0,0,8" IsEnabled="False"/>
                            
                            <CheckBox Content="Safety PLC 연동 (Bit, Word)" 
                                    IsChecked="{Binding Settings.IsSafetyPlcIntegrationEnabled}"
                                    Foreground="#7F8C8D" FontSize="14" Margin="0,0,0,8" IsEnabled="False"/>
                            
                            <CheckBox Content="CC-Link 연동 (Bit, Word)" 
                                    IsChecked="{Binding Settings.IsCcLinkIntegrationEnabled}"
                                    Foreground="#7F8C8D" FontSize="14" IsEnabled="False"/>
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
                
            </Grid>
            
            <!-- 하단 상태 표시 -->
            <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="상태:" Foreground="Gray" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding StatusMessage}" Foreground="White"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <syncfusion:ButtonAdv Content="설정 검증" 
                                              Command="{Binding ValidateSettingsCommand}"
                                              Background="#8E44AD" 
                                              Foreground="White"
                                              Margin="0,0,10,0"/>
                        <ProgressBar IsIndeterminate="True" 
                                   Width="100" Height="5"
                                   Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>