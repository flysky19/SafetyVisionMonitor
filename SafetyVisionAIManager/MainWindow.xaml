<Window x:Class="SafetyVisionAIManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        Title="Safety Vision AI Manager" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <syncfusion:TabControlExt Name="MainTabControl" TabStripPlacement="Top">
            <!-- AI 모델 관리 탭 -->
            <syncfusion:TabItemExt Header="AI 모델 관리" Name="AIModelTab">
                <Frame Name="AIModelFrame" Source="Views/AIModelView.xaml" NavigationUIVisibility="Hidden"/>
            </syncfusion:TabItemExt>
            
            <!-- 모델 변환 탭 -->
            <syncfusion:TabItemExt Header="모델 변환" Name="ModelConversionTab">
                <Frame Name="ModelConversionFrame" Source="Views/ModelConversionView.xaml" NavigationUIVisibility="Hidden"/>
            </syncfusion:TabItemExt>
        </syncfusion:TabControlExt>
    </Grid>
</Window>